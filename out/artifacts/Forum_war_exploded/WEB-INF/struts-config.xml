<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
    <form-beans>
        <form-bean name="loginFormBean" type="com.SE3Forum.fzu.Struct.FormBeans.loginFormBean" />
    </form-beans>
    <global-exceptions />
    <global-forwards />
    <action-mappings>
        <action path="/login" forward="/login/login.jsp"></action>
        <action attribute="loginForm" input="/Controller/Login.servlet" name="loginFormBean" path="/hello"
                type="com.SE3Forum.fzu.Struct.Actions.loginAction">
            <forward name="success" path="index.jsp"/>
                </action>
    </action-mappings>
</struts-config>